extends base
block title
  title= page.title + " | " + config.title
block content
  .post
    if page.type == 'tags'
      .post-title
        span= '本博客共' + site.tags.toArray().length + '个标签：'
      .tag-cloud
        != tagcloud({min_font: 14, max_font: 28, amount: 100, color: true, start_color: '#eeb422', end_color: '#1874cd'})
    else
      .post-title= page.title
      .post-content
        != page.content
